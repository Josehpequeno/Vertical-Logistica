{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6"],
    "moduleResolution": "node",  
    "sourceMap": true,
    "strictPropertyInitialization": false,    
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
